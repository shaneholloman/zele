{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "lib": ["esnext", "dom"],
    "outDir": "dist",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts", "src/test-fixtures"],
}
