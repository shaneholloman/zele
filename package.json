{
  "name": "zele",
  "version": "0.3.12",
  "description": "Gmail CLI â€” manage email from your terminal",
  "type": "module",
  "main": "dist/cli.js",
  "bin": "./bin/zele",
  "scripts": {
    "build": "rm -rf dist && bun run generate && bun run tsc",
    "prepublishOnly": "bun run build",
    "dev": "tsx src/cli.ts",
    "generate": "prisma generate && bun run generate:sql",
    "generate:sql": "rm -f dev.db && prisma db push --url 'file:dev.db' --accept-data-loss && echo '-- Generated by bun run generate:sql. Do not edit.' > src/schema.sql && sqlite3 dev.db '.schema' >> src/schema.sql",
    "tsc": "tsc",
    "test": "vitest"
  },
  "keywords": [
    "gmail",
    "cli",
    "email"
  ],
  "author": "remorses",
  "license": "ISC",
  "packageManager": "bun@1.3.9",
  "dependencies": {
    "@googleapis/gmail": "^16.1.1",
    "@libsql/client": "^0.15.15",
    "@prisma/adapter-libsql": "7.3.0",
    "@prisma/client": "7.3.0",
    "@termcast/utils": "^2.2.6",
    "email-addresses": "^5.0.0",
    "email-reply-parser": "^2.3.5",
    "errore": "^0.11.0",
    "fkill": "^10.0.3",
    "goke": "^6.1.3",
    "google-auth-library": "^10.5.0",
    "js-yaml": "^4.1.1",
    "mimetext": "^3.0.28",
    "picocolors": "^1.1.1",
    "react": "^19.2.4",
    "remark": "^15.0.1",
    "termcast": "^1.3.47",
    "ts-ics": "^2.4.0",
    "tsdav": "^2.1.7",
    "turndown": "^7.2.0",
    "zod": "^4.3.6"
  },
  "commands": [
    {
      "name": "mail-tui",
      "title": "Mail",
      "description": "Browse and read emails",
      "mode": "view"
    }
  ],
  "devDependencies": {
    "@types/email-addresses": "^3.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.0",
    "@types/react": "^19.1.2",
    "@types/turndown": "^5.0.5",
    "prisma": "7.3.0",
    "tsx": "^4.19.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "trustedDependencies": [
    "@prisma/engines",
    "prisma"
  ],
  "files": [
    "dist",
    "bin",
    "src",
    "schema.prisma"
  ]
}
